%div(data-role="page" id="home")

  %div(data-role="header")
    %a( id="addLink" href="#" data-theme="a" data-icon="plus" data-iconpos="notext" data-transition="slide") Add
    %h1 Today, May 7th
    %a(href="#jump" data-icon="grid" data-iconpos="notext" data-transition="slide") Jump
 
  %div(id="addEntry")
    %form
      %input(type="text" value="Entry name here...")
      %input(type="submit" value="add")
 
  %ul(data-role="listview" data-theme="c" id="todosList")
    %li(data-theme="c")
      %a(href="#") Osta ruokaa 2 
          
/Start show page
          
%div(data-role="page" id="show")
  = haml :header

  %h2#show_title Show todo
  %p
    Implement.

  = haml :footer
  
/Start jump page

%div(data-role="page" id="jump")

  %div(data-role="header")
    %a(href="#add" data-icon="plus" data-iconpos="notext" data-transition="slide")Add
    %h1 Today, May 7th
    %a(href="#home" data-icon="grid" data-iconpos="notext" data-transition="slide" data-theme="b" data-direction="reverse")Jump
    
  %div(data-role="content")
    %div(class="week")
      %a(class="day" href="#") 0
      %a(class="day" href="#") 1
      %a(class="day" href="#") 2
      %a(class="day" href="#") 3
      %a(class="day" href="#") 4
      %a(class="day" href="#") 5
      %a(class="day" href="#") 6
  
/Start motions page
  
%div(data-role="page" id="motions")
  = haml :header

  %h2 Motions
  %a(href="#add")
    Add todo
  %label(for="sliderX")
    X Acceleration (Roll)
  %input(type="range" name="sliderX" id="sliderX" value="0" min="-10" max="10" data-theme="a")
  %label(for="sliderY")
    Y Acceleration (Pitch)
  %input(type="range" name="sliderY" id="sliderY" value="0" min="-10" max="10" data-theme="b")
  %label(for="sliderZ")
    Z Acceleration (<strike>Yaw</strike> Face up/down)
  %input(type="range" name="sliderZ" id="sliderZ" value="0" min="-10" max="10" data-theme="c")

  %div(style="text-align:center;margin-top:10px;")
    %canvas(id="c" width="100" height="100")

  = haml :footer
